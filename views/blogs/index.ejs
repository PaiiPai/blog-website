<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head.ejs') %>
<body>

   <%- include('../partials/header.ejs') %>

    <div class="blogs content">
        <h1>Blogs</h1>
        <% if (blogs.length > 0) { %>
            <% blogs.forEach(blog => { %>
                <a href="/blogs/<%= blog._id %>">
                    <h2><%= blog.title %></h2>
                    <p><%= blog.snippet %></p>
                </a>
            <% }); %>
        <% } else { %>
            <p>There are no blogs to display...</p>
        <% } %>
    </div>

    <%- include('../partials/footer.ejs') %>
</body>
</html>